/* Global styles */
html {
  scroll-behavior: smooth;
  scroll-padding-top: 4rem;
  & :is(*, *::before, *::after) {
    box-sizing: border-box;
  }
  & main {
    position: relative;
    z-index: 2;
  }
}

button.no-styles {
  background-color: transparent;
  border: none;
  width: auto;
}

:is(p, h1, h2, h3, h4, h5, h6, li) {
  cursor: text;
}

main  {
  & section {
    margin-bottom: 8rem;
    & h2 {
      & theme-color {
        color: var(--primary);
      }
    }
  }
  & .spacer {
    margin-bottom: 8rem;
  }
}

